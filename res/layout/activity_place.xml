<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PlaceActivity" >

    <TextView
        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place of Photograph" />

    <Spinner
        android:id="@+id/spinner_photographed_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/button_back_place"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/spinner_photographed_place"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="48dp"
        android:background="@drawable/buttonshapesmallred"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_next_place"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_back_place"
        android:layout_alignBottom="@+id/button_back_place"
        android:layout_alignParentRight="true"
        android:background="@drawable/buttonshapesmallgreen"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
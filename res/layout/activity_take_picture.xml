<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TakePictureActivity" >

    <Button
        android:id="@+id/button_take_image"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/buttonshape"
        android:padding="16dp"
        android:text="TAKE PICTURE"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:layout_below="@+id/button_take_image"
        
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/button_back_take_image"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/buttonshapesmallred"
        android:text="BACK"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button_next_take_image"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button_back_take_image"
        android:layout_alignBottom="@+id/button_back_take_image"
        android:layout_alignRight="@+id/button_take_image"
        android:background="@drawable/buttonshapesmallgreen"
        android:text="NEXT"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</RelativeLayout>
